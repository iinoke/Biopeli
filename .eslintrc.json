{
  "parser": "babel-eslint",
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "mocha": true 
  },
  "rules": {
    "import/no-unresolved": [2],
    "max-len": ["error", 100],
    "no-trailing-spaces": ["off"]
  },
  "globals": {
    "phaser": true
  },
  "settings": {
    "import/core-modules": [ "phaser", "pixi", "p2" ]
  }
}
